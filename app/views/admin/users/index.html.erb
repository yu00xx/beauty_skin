<div class="row justify-content-md-center pt-5">
  <div class="col-md">
    <h2 class="font-weight-bold">会員一覧</h2>
  </div>
</div>

<div class="row pt-3">
  <div class="col-md">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">名前</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <% if user.is_deleted? %>
              <p>退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-md-center pt-3">
  <div class="col-md-4 ml-5">
    <%= paginate @users %>
  </div>
  <div class="col-md-8"></div>
</div>

