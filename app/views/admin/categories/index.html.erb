<div class="row justify-content-md-center pt-5">
  <div class="col-md">
    <h2 class="font-weight-bold">カテゴリ一覧</h2>
  </div>
</div>

<div class="row">
  <div class="col-md">
    <% if @category.errors.any? %>
      <%= @category.errors.count %>件のエラーが発生しました
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<div class="row pt-5">
  <%# カテゴリ追加フォーム(画面左側) %>
  <div class="col-md-6">
    <%= form_with model: @category, url: admin_categories_path do |f| %>
      <%= f.label :name, "カテゴリ名", class:"font-weight-bold mr-3" %>
      <%= f.text_field :name %>
      <%= f.submit "追加する", class:"btn btn-outline-success ml-2" %>
    <% end %>
  </div>

  <%# カテゴリ一覧(画面右側) %>
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" class="text-center">カテゴリ</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "編集", edit_admin_category_path(category.id), class:"btn btn-outline-success btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>