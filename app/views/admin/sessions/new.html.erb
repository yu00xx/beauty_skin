<div class="row justify-content-md-center pt-5">
  <div class="col-md text-center">
    <h2 class="font-weight-bold">管理者ログイン</h2>
  </div>
</div>

<%# ログインフォーム %>
<div class="row justify-content-md-center pt-5">
  <div class="col-md">
    <%= form_with model: @admin, url: admin_session_path do |f| %>

    <div class="form-group row">
      <%= f.label "メールアドレス", class:"col-md-6 col-form-label text-right" %>
      <div class="col-md-6 text-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "パスワード", class:"col-md-6 col-form-label text-right" %>
      <div class="col-md-6 text-left">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md text-center">
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      </div>
    </div>
    <div class="actions text-center mt-5">
      <%= f.submit "ログイン", class:"btn btn-outline-primary" %>
    </div>
  <% end %>
  </div>
</div>
