<div class="row justify-content-md-center pt-5">
  <div class="col-md">
    <% if @no_search_message.present? %>
      <h2 class="font-weight-bold"><%= @no_search_message %></h2>
    <% else %>
      <h2 class="font-weight-bold">
        <%= @category %>
        <%= @usability %>
        <%= @price %><%= @unit %>
        の検索結果
      </h2>
    <% end %>
  </div>
  <div class="col-md">
    <%= link_to "投稿一覧へ戻る", posts_path, class:"btn btn-outline-primary" %>
  </div>
</div>

<div class="row pt-5">
  <div class="col-md-8">
    <div class="d-flex flex-wrap">
      <%= render 'index', posts: @posts %>
    </div>
  </div>
</div>

<div class="row pt-5">
  <div class="col-md-4 ml-5">
    <%= paginate @posts %>
  </div>
  <div class="col-md-8"></div>
</div>
