<div class="row pt-5">
  <div class="col-md">
    <h2 class="font-weight-bold"><%= @user.name %>さんのプロフィール</h2>
  </div>
</div>

<div class="row pt-5">
  <%# ユーザー詳細(マイページ左側) %>
  <div class="col-md-4 pt-3">
    <div class="text-center"><%= image_tag @user.get_profile_image(150, 150) %></div>

    <div class="text-center pt-2"><%= @user.name %></div>

    <div class="text-center pt-3">
      性別：<%= @user.gender_i18n %>
    </div>

    <div class="text-center mr-3 pt-2">
      肌タイプ：<%= @user.skin_type_i18n %>
    </div>

    <% if current_user == @user %>
      <div class="text-center pt-3">
        <%= link_to "いいねした投稿を見る", user_likes_path(@user), class:"btn btn-outline-primary btn-sm" %>
      </div>
    <% end %>
    <% if @user == current_user %>
      <div class="text-center pt-5">
        <span class="mr-2"><%= link_to "プロフィールを編集", edit_user_path(@user.id), class:"btn btn-outline-success btn-sm" %></span>
        <%= link_to "退会する", confirm_withdraw_user_path, class:"btn btn-outline-danger btn-sm" %>
      </div>
  <% end %>
  </div>

  <%# ユーザーの投稿一覧(マイページ右側) %>
  <div class="col-md-8">
    <h4>投稿数：<%= @user.posts.count %> 件</h4>
    <div class="d-flex flex-wrap">
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-10"></div>
  <div class="col-md-2">
    <%= paginate @posts %>
  </div>
</div>